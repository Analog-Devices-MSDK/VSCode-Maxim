{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make -j 8 TARGET=${config:target} all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make -j 8 clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "clean-hard",
            "type": "shell",
            "command": "make -j 8 distclean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-s",
                "${env:MAXIM_PATH}/Toolchain/share/openocd/scripts",
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/${config:target}.cfg",
                "-c",
                "program build/${config:target}.elf verify exit"
            ],
            "group": "build",
            "problemMatcher": [],
            "dependsOn":["build"]
        }
    ]
}