{
    "configurations": [
        {
            "name": "GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/##__ELF_FILE__##",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/GNUTools/bin/arm-none-eabi-gdb"
            },
            "windows": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/GNUTools/bin/arm-none-eabi-gdb.exe"
            },
            "miDebuggerArgs": "./build/##__ELF_FILE__##",
            "preLaunchTask": "flash",
            "setupCommands": [
                {
                    "description": "Launch OpenOCD from within GDB via pipe connection",
                    "text": "target remote | openocd -c \"gdb_port pipe;log_output openocd.log\" -s ${config:MAXIM_PATH}/Tools/OpenOCD/scripts -f interface/${config:debugger}.cfg -f target/${config:target}.cfg ##__OPENOCD_PARAMS__##",
                    "ignoreFailures": false
                },
                {
                    "description": "Reset",
                    "text": "monitor reset halt",
                    "ignoreFailures": false
                }
            ],
        },
    ]
}