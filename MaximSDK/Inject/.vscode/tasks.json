{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make -j 8 TARGET=${config:target} BOARD=${config:board} MAXIM_PATH=${config:MAXIM_PATH} PROJECT_NAME=${config:project_name} all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make -j 8 clean TARGET=${config:target} BOARD=${config:board} MAXIM_PATH=${config:MAXIM_PATH} PROJECT_NAME=${config:project_name}",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "clean-periph",
            "type": "shell",
            "command": "make -j 8 distclean TARGET=${config:target} BOARD=${config:board} MAXIM_PATH=${config:MAXIM_PATH} PROJECT_NAME=${config:project_name}",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-s",
                "${config:MAXIM_PATH}/Tools/OpenOCD/scripts",
                "-f",
                "interface/${config:debugger}.cfg",
                "-f",
                "target/${config:target}.cfg",
                "-c",
                "program build/${config:project_name}.elf verify exit"
            ],
            "group": "build",
            "problemMatcher": [],
            "dependsOn":["build"]
        }
    ]
}